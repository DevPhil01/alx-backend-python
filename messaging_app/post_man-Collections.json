{
  "info": {
    "name": "Messaging App API",
    "_postman_id": "b1234567-89ab-cdef-1234-56789abcdef0",
    "description": "Postman collection to test Conversations and Messages API with JWT authentication.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Obtain JWT Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"testpassword\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/token/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "token", ""]
        }
      }
    },
    {
      "name": "Conversations - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"participants\": [1, 2]\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/conversations/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", ""]
        }
      }
    },
    {
      "name": "Conversations - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/conversations/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", ""]
        }
      }
    },
    {
      "name": "Conversations - Retrieve by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/conversations/1/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", "1", ""]
        }
      }
    },
    {
      "name": "Messages - Send",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"conversation\": 1,\n    \"content\": \"Hello from Postman!\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/messages/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "messages", ""]
        }
      }
    },
    {
      "name": "Messages - List in Conversation",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/messages/?conversation=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "messages", ""],
          "query": [
            { "key": "conversation", "value": "1" }
          ]
        }
      }
    },
    {
      "name": "Unauthorized - Try fetching conversations without token",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8000/api/conversations/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", ""]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": ""
    }
  ]
}
